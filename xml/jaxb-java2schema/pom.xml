<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>name.abhijitsarkar.learning.xml.jaxb</groupId>
    <artifactId>jaxb-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <artifactId>jaxb-java2schema</artifactId>
  <name>jaxb-java2schema</name>

  <description>
    The Java Tutorials, Lesson: Introduction to JAXB, practice code  
  </description>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/jaxb.index</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.xsd</include>
        </includes>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>schemagen</id>
      <build>
        <defaultGoal>generate-sources</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>jaxb2-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>create-marshal-schemagen</id>
                <goals>
                  <goal>schemagen</goal>
                </goals>
                <phase>generate-sources</phase>
                <configuration>
                  <outputDirectory>src/main/resources/name/abhijitsarkar/learning/xml/jaxb/java2schema/createmarshal/generated</outputDirectory>
                  <includes>
                    <include>**/cardfile/*.java</include>
                  </includes>
                  <!-- This doesn't do what you might think...see the documentations -->
                  <transformSchema>
                    <schemas>
                      <schema>
                        <uri>http://abhijitsarkar.name/learning/xml/jaxb/java2schema/create-marshal</uri>
                        <toPrefix>cm</toPrefix>
                        <toFile>create-marshal.xsd</toFile>
                      </schema>
                    </schemas>
                  </transformSchema>
                </configuration>
              </execution>
              <execution>
                <id>xml-adapter-schemagen</id>
                <goals>
                  <goal>schemagen</goal>
                </goals>
                <phase>generate-sources</phase>
                <configuration>
                  <outputDirectory>src/main/resources/name/abhijitsarkar/learning/xml/jaxb/java2schema/xmladapter/generated</outputDirectory>
                  <includes>
                    <include>**/shoppingcart/*.java</include>
                  </includes>
                  <!-- This doesn't do what you might think...see the documentations -->
                  <transformSchema>
                    <schemas>
                      <schema>
                        <uri>http://abhijitsarkar.name/learning/xml/jaxb/java2schema/xml-adapter</uri>
                        <toPrefix>xa</toPrefix>
                        <toFile>xml-adapter.xsd</toFile>
                      </schema>
                    </schemas>
                  </transformSchema>
                </configuration>
              </execution>
              <execution>
                <id>xml-schema-type-schemagen</id>
                <goals>
                  <goal>schemagen</goal>
                </goals>
                <phase>generate-sources</phase>
                <configuration>
                  <outputDirectory>src/main/resources/name/abhijitsarkar/learning/xml/jaxb/java2schema/xmlschematype/generated</outputDirectory>
                  <includes>
                    <include>**/address/*.java</include>
                  </includes>
                  <!-- This doesn't do what you might think...see the documentations -->
                  <transformSchema>
                    <schemas>
                      <schema>
                        <uri>http://abhijitsarkar.name/learning/xml/jaxb/java2schema/xml-schema-type</uri>
                        <toPrefix>xst</toPrefix>
                        <toFile>xml-schema-type.xsd</toFile>
                      </schema>
                    </schemas>
                  </transformSchema>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>